<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WPF.Views.Notifications.TestNotificationView">
  <UserControl.Styles>
    <Style Selector="Border.Fade">
      
    </Style>
  </UserControl.Styles>
  
  <Border Opacity="{Binding Opacity}" Background="#EAF7EE" BorderBrush="#BEE5C8" BorderThickness="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 60 10 0" CornerRadius="12">
    <Border.Transitions>
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
      </Transitions>
    </Border.Transitions>
    
    <Grid Background="{x:Null}" Width="300" Height="50">
      <Image Source="/Assets/test.png" Width="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8 0 0 0"/>
      <Label HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 80 0">Success!</Label>
      <Button HorizontalAlignment="Right" Cursor="Hand" VerticalAlignment="Center" Margin="0 0 8 0" Background="{x:Null}" Command="{Binding CloseCommand}">X</Button>
    </Grid>
  </Border>
</UserControl>
