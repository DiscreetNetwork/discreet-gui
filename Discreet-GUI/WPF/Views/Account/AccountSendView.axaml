<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WPF.Views.Account.AccountSendView">

  <UserControl.Styles>
    <StyleInclude Source="/ApplicationStyles.axaml"/>
  </UserControl.Styles>
  
  <Grid Background="#1C1C1D">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
    </Grid.RowDefinitions>

    <Label Grid.Row="0" FontSize="20" Foreground="#C0C0C0">Receiver Address</Label>
    <TextBox Classes="input content-left align-h-left" Grid.Row="1" Height="40" Width="350" Margin="0 5 0 0"/>

    <Label Grid.Row="2" Margin="0 30 0 0" FontSize="20" Foreground="#C0C0C0">Amount</Label>
    <TextBox Classes="input content-left align-h-left" Grid.Row="3" Height="40" Width="350" Margin="0 5 0 0"/>

    <Button Classes="btn btn-pink" Grid.Row="4" Height="45" Width="200" FontSize="18" Margin="0 30 0 0">Send</Button>

  </Grid>
  
</UserControl>
