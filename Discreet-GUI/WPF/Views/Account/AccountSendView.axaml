<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WPF.Views.Account.AccountSendView">

  <UserControl.Styles>
    <StyleInclude Source="/ApplicationStyles.axaml"/>
  </UserControl.Styles>
  
  <Grid Background="#1C1C1D">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
      <RowDefinition Height="auto"/>
	  <RowDefinition Height="auto"/>
	  <RowDefinition Height="auto"/>
	  <RowDefinition Height="auto"/>
	  <RowDefinition Height="auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Label Grid.Row="0" FontSize="30" Foreground="#8C52C0">Send</Label>
	  
	<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 20 0 0">
            <Label FontSize="50" Foreground="white" Padding="4 0 5 0" VerticalContentAlignment="Bottom" FontWeight="300" >8217.14</Label>
            <Label FontSize="26" Foreground="white" VerticalContentAlignment="Bottom" FontWeight="300" >DIS available</Label>
    </StackPanel>
	  
    <Label Grid.Row="2" FontSize="16" Margin="0 40 0 0" FontWeight="300" Foreground="#C0C0C0">Receiver Address</Label>
    <TextBox Classes="input content-left align-h-left" FontWeight="300" Grid.Row="3" Height="40" Width="350" Margin="0 5 0 0"/>

    <Label Grid.Row="4" Margin="0 10 0 0" FontSize="16" FontWeight="300" Foreground="#C0C0C0">Amount</Label>
    <TextBox Classes="input content-left align-h-left" FontWeight="300" Grid.Row="5" Height="40" Width="350" Margin="0 5 0 0"/>

    <Label Grid.Row="6" Margin="0 10 0 0" FontWeight="300" FontSize="16" Foreground="#C0C0C0">Add description +</Label>
	  
	<Label Grid.Row="7" FontSize="16" FontWeight="300" Margin="0 25 0 0" Foreground="#C0C0C0">Transaction fee</Label>
    <ComboBox CornerRadius="8" Grid.Row="8" Height="40" Width="350" Margin="0 5 0 0"/>

    <Button Classes="btn btn-pink hand" Grid.Row="9" Height="50" Width="300" FontSize="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 25 25">Send</Button>

  </Grid>
  
</UserControl>
