<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WPF.Views.Start.CreateWalletChoicesView">
  <Grid Background="#8C52C0" Width="600">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Button Grid.Row="0" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Command="{Binding BackCommand}">
      <Image Source="/Assets/Buttons/back-logo-placeholder.png"/>
    </Button>
    <Label Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20">Create new wallet</Label>
    
    <Button Grid.Row="1" Height="55" Width="300" 
            HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            FontSize="20" Foreground="white" Background="{x:Null}" BorderBrush="#FFAE86D3"
            Command="{Binding NavigateYourRecoveryPhraseView}">Simple</Button>

    <Button Grid.Row="2" Height="55" Width="300" Margin="0 15 0 0"
            HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            FontSize="20" Foreground="white" Background="{x:Null}" BorderBrush="#FFAE86D3">Simple *Bootstrap*</Button>
  </Grid>
</UserControl>
