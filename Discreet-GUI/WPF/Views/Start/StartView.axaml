<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WPF.Views.Start.StartView">

  <UserControl.Styles>
    <StyleInclude Source="/ApplicationStyles.axaml"/>
  </UserControl.Styles>
  
  <Grid Background="#8C52C0" Margin="0 0 0 0">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Button Grid.Row="0" Classes="light centered rounded" FontSize="20" Height="55" Width="300" Command="{Binding NavigateCreateWalletChoicesView}">Create new wallet</Button>
    <Button Grid.Row="1" Classes="transparent centered rounded" FontSize="20" Height="55" Width="300" Margin="0 15 0 0" Command="{Binding NavigateExistingWalletChoicesViewCommand}">I already have a wallet</Button>
  </Grid>
</UserControl>
