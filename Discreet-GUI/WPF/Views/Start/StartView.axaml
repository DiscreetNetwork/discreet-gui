<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="WPF.Views.Start.StartView">
  
  <Grid Background="#8C52C0" Margin="0 0 0 0">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Button Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="55" Width="300" FontSize="20"  BorderBrush="{x:Null}" Foreground="#D35683" Background="White" Command="{Binding NavigateCreateWalletChoicesView}">Create new wallet</Button>
    <Button Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="55" Width="300" FontSize="20" Margin="0 15 0 0" Foreground="White" Background="#00000000" BorderBrush="#FFAE86D3" >I already have a wallet</Button>
  </Grid>
</UserControl>
